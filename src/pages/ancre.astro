---
import Layout from "../layouts/Layout.astro";
import GraphicSpecies from "../components/GraphicSpecies.astro";
---

<Layout>
  <!-- Menu esthétique avec DaisyUI -->
  <div class="navbar">
    <div class="navbar-center">
      <div class="tabs tabs-boxed">
        <a href="#adelie" class="tab tab-active">🐧 Adelie</a>
        <a href="#chinstrap" class="tab">🐧 Chinstrap</a>
        <a href="#gentoo" class="tab">🐧 Gentoo</a>
      </div>
    </div>
  </div>

  <div class="carousel w-full">
    <div id="adelie" class="carousel-item w-full">
      <GraphicSpecies species="Adelie" />
    </div>
    <div id="chinstrap" class="carousel-item w-full">
      <GraphicSpecies species="Chinstrap" />
    </div>
    <div id="gentoo" class="carousel-item w-full">
      <GraphicSpecies species="Gentoo" />
    </div>
  </div>
</Layout>

<style>
  .carousel {
    scroll-behavior: smooth;
  }
</style>
