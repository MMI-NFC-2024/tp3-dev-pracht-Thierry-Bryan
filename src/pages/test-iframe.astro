---
import Layout from "../layouts/Layout.astro";
import MenuIframe from "../components/Menu-iframe.astro";
---

<Layout>
  <MenuIframe />

  <!-- Iframe affichant Adelie par dÃ©faut -->
  <iframe
    src="/species-iframe/Adelie"
    name="iframe-species"
    id="iframe-species"
    style="width:100%; border:none; height:600px;"
    onload="resizeIframe(this)"></iframe>

  <!-- Script pour redimensionner la hauteur -->
  <script>
    function resizeIframe(iframe) {
      try {
        iframe.style.height =
          iframe.contentWindow.document.body.scrollHeight + "px";
      } catch (e) {
        // Si cross-origin, ignore
      }
    }
  </script>
</Layout>
