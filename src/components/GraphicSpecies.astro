---
import * as Plot from "@observablehq/plot";
import PlotFigure from "../components/PlotFigure.astro";
import penguins from "../assets/penguins.json";

const { species = "Adelie" } = Astro.props;
const penguinsSpecies = penguins.filter(({ species: s }) => s === species);
---

<div>
  <h1>{species}</h1>
  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguinsSpecies, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    }}
  />
</div>
